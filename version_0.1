<!DOCTYPE html>
<HTML>
  <HEAD>
		<TITLE>Infinite Trailers Prototype</TITLE>
		<STYLE>
	 body {background: black;	color: #CCCCCC;	text-align:center;	}	
			
	#lola {position: absolute;    top: 90%;    left: 75%;	z-index:1  }		
	
	#PP {position: absolute;   top: 90%;   left: 55%;   z-index:1  }
	
	#lola2 {position: absolute;    top: 90%;    left: 20%;	z-index:1  }	
	
	#container { position: absolute; width: 100%; height: 100%; overflow:hidden; }	
    
	#currentVideo { width: 100%; height: 100%; z-index:0;}
			
	input[type=button] {
				background:transparent;
				color:black;
				height:3em;
				border:single;
				border-radius:0.5em;
				box-shadow:0 0.2em 0.5em black;
			}
					
		</STYLE>
	</HEAD>
	<BODY>
		<script type="text/javascript">

			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-38870909-1']);
			_gaq.push(['_trackPageview']);

			(function() {
				var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
				ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
				var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			})();
		</script>
		
		
		
	<br>
	<div id="container">
    <video id="currentVideo" src="Videos\bigger_badminton_600.ogv" autoplay ></video></div>
    
	<div id="lola2"><input type="button" value="Play/Pause" onClick="playPause()"></div>
    
	<Div id="lola"><input type="button" value="Previous" onclick="_gaq.push(['_trackEvent', 'Videos', 'Previous', 'Back']),                             previous();"></Div>
	<div id="PP"><input type="button" value="Next" onclick="_gaq.push(['_trackEvent', 'Videos', 'Next', 'Skip']), next();"></div>
		
		<script>
		
			var currentVideoName='videos\bigger_badminton_600.ogv';
			
			var videoList=[
			'Videos/country_life_butter.ogv',
			'Videos/heinz_deli_mayo.ogv',
			'Videos/schwepps_bull.ogv',
			'Videos/sexy_subaru_carwash.ogv',
			];
			
			var video = document.getElementById('currentVideo');
			var index = videoList.indexOf(window.currentVideoName);
			
			video.addEventListener('loadedmetadata', function() {
				this.currentTime = 16.4;
			}, false);
			
			
			function previous() {
				if (index > 0) {
				video.pause();
				video.currentTime=0;
				video.src = videoList[index-1];
				window.currentVideoName=videoList[index-1];
				video.play();
				index -= 1;
				}
			}
		
			function playPause()
			{
			if (video.paused) 
				video.play(); 
			else 
			video.pause(); 
			} 
			
			function next() {
				if (index < videoList.length - 1) {
				video.pause();
				video.currentTime=0;
				video.src = videoList[index+1];
				window.currentVideoName=videoList[index+1];
				video.play();
				index += 1;
				} 
			}
						
			
					</script> 
	</BODY>
</HTML>
